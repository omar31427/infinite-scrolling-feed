<%- include('includes/headBeginning.ejs')%>
<%-include('includes/headEnd.ejs')%>
    <div class="card-body" id = "formDiv">
        <form class="row g-3 needs-validation" method="post" action="/feed">
            <div class="mb-3 col-6">
                <div class="mt-3">
                    <label for="email">E-MAIL</label>
                    <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" required>
                </div>
                <div class="mt-3">
                    <label for="password">PASSWORD</label>
                    <input type="password" pattern=".{8,}" title="8 characters minimum" class="form-control" name="password" id="password" aria-describedby="emailHelp" required>
                </div>
                <div class="errorAlert"><%=error%></div>
                <div class="successfulRegistration"><%=registrationMsg%></div>
                <div class="mt-3">
                    <input class="btn btn-outline-dark" type="submit" value="LogIn" formaction="/feed">
                </div>
            </div>
            <div class="col-6"></div>
        </form>
    </div>
    <div class="mt-3 text-center">
        <p>Don't have an account?</p>
        <form method="post" >
            <input class="btn btn-outline-primary" type="submit" value="Register" formaction="/register">
        </form>
    </div>
    <br>
</div>
<div class="col-3"></div>
<%-include('includes/end.ejs')%>